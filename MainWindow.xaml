<Window x:Class="StandingDeskPartner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StandingDeskPartner"
        mc:Ignorable="d"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        Title="MainWindow" Height="265" Width="265" MinHeight="265" MinWidth="265" MouseDown="Window_MouseDown">
    <Grid>
        <Image x:Name="MainImage" Source="Images\Standing.png" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="OpenSettingsBtn" Click="OpenSettingsBtn_Click" HorizontalAlignment="Left" Margin="300,0,0,0" VerticalAlignment="Bottom" Width="26">S</Button>
    </Grid>
</Window>
